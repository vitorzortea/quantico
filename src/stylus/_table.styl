.table
  display table
  width 100%
  overflow-x auto
  margin 10px 0

  table
    min-width 100%
    border-collapse collapse
    border-spacing 0

    th
      background-color #262FB2
      color white
      text-align left
      padding 10px 5px

      &:first-child
        padding: 10px 5px 10px 20px

      &:last-child
        padding: 10px 20px 10px 50px

      .mat-checkbox-frame
        border-color white

    td
      padding 10px 5px

      &:first-child
        padding: 10px 5px 10px 20px

      &:last-child
        padding: 10px 20px 10px 50px

    tr:nth-child(2n - 1) td
        background-color #F5F5F5

